{
	"name": "stanback-blog",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"build": "bun run src/build.ts",
		"dev": "bun run src/watch.ts",
		"serve": "bun run build && wrangler pages dev dist --port 8788",
		"deploy": "bun run build && wrangler pages deploy dist",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "bun test",
		"new:post": "bun run src/scripts/new-post.ts",
		"new:note": "bun run src/scripts/new-note.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@cloudflare/workers-types": "^4.20240620.0",
		"@resvg/resvg-js": "^2.6.2",
		"@tailwindcss/cli": "^4.0.0",
		"@types/bun": "^1.1.0",
		"marked": "^15.0.0",
		"sharp": "^0.34.5",
		"shiki": "^1.24.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.7.0",
		"wrangler": "^3.99.0"
	},
	"dependencies": {
		"yaml": "^2.8.2"
	}
}
